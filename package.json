{
  "license": "Apache-2.0",
  "devDependencies": {
    "@alirya/monorepo": "^0.3.1",
    "deepmerge": "^4.2.2",
    "lerna": "^5.1.8",
    "tslint": "^5.13.0",
    "typescript": "^4.4.4",
    "glob": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "jasmine": "=3.10.0",
    "jasmine-ts-console-reporter": "^3.1.1",
    "esm": "^3.2.25"
  },
  "private": true,
  "scripts": {
    "bootlink": "npm-run-all --serial bootstrap link",
    "config-update": "npm-run-all --serial _package-update _tsconfig-update _tslint-update _tsconfig-spec-update _license-update _jasmine-update _jasmine-debug-update",
    "print-versions": "node all-version.js",
    "bootstrap": "lerna bootstrap",
    "bootstrap-scope": "lerna bootstrap --scope @alirya/iterable",
    "installs": "lerna exec  -- npm install",
    "link": "lerna link",
    "spec-run": "lerna run spec-run --stream --no-bail",
    "spec-run-debug": "lerna exec -- node -r esm ../../node_modules/jasmine/bin/jasmine.js --config=./jasmine-debug.json --reporter=jasmine-ts-console-reporter",
    "spec-run-debug-scope": "lerna exec --scope @alirya/uri -- node -r esm ../../node_modules/jasmine/bin/jasmine.js --config=./jasmine-debug.json --reporter=jasmine-ts-console-reporter",
    "spec-run-debug-scope-file": "lerna exec --scope @alirya/koa -- node -r esm ../../node_modules/jasmine/bin/jasmine.js --config=./jasmine-debug.json --reporter=jasmine-ts-console-reporter dist-spec/middleware/error-handler/debug/server.spec.js",
    "spec-run-scope": "lerna exec --scope @alirya/score -- node -r esm ../../node_modules/jasmine/bin/jasmine.js --config=./jasmine.json --reporter=jasmine-ts-console-reporter",
    "compile": "lerna run compile --stream --parallel",
    "compile-watch": "lerna run compile-watch --stream --parallel",
    "compile-watch-scope": "lerna run compile-watch --stream --scope @alirya/score",
    "release": "lerna run --no-bail release",
    "release-scope": "lerna run --scope @alirya/score --stream release",
    "spec-compile-watch": "lerna run spec-compile-watch --stream --parallel",
    "spec-compile-watch-scope": "lerna run spec-compile-watch --stream --scope @alirya/score",
    "doc-generate": "lerna run doc-generate --stream --parallel",
    "git-tag": "lerna run git-tag --no-bail",
    "git-tag-push": "lerna run git-tag-push --no-bail",
    "lint": "lerna run lint --stream --parallel",
    "lint-fix": "lerna run lint-fix --stream --parallel",
    "spec-compile": "lerna run spec-compile",
    "build-watch": "tsc -b -w",
    "build-spec": "tsc -b tsconfig-spec.json",
    "build:esm": "lerna exec --stream --parallel -- ../../node_modules/.bin/tsc --outDir lib/esm --module esnext --target esnext",
    "build:clean": "rm -rf ./packages/*/lib && yarn build",
    "ensure-dist": "lerna exec mkdirp dist",
    "update-dependency": "npm-run-all --serial _update-peer-dependency _package-update",
    "_license-update": "node -r esm update-license.js",
    "_jasmine-update": "node -r esm update-jasmine.js",
    "_jasmine-debug-update": "node -r esm update-jasmine-debug.js",
    "_tslint-update": "node -r esm update-tslint.js",
    "_tsconfig-spec-update": "node -r esm update-tsconfig-spec.js",
    "_tsconfig-update": "node -r esm update-tsconfig.js",
    "_package-update": "node -r esm update-package.js",
    "_update-peer-dependency": " node -r esm update-peer-dependency.js"
  }
}